--- Creating a table for Estimated Time Arrival

CREATE TABLE TRIP_DETAILS (
	TRP_ETA_SEQ INT64 NOT NULL,
	APP_SRC STRING(10) NOT NULL,
	CREATED_BY_NM STRING(100) NOT NULL,
	CREATED_GMT_DT TIMESTAMP NOT NULL,
	CTG_STAT_CD STRING(10),
	DLY_TRP_LEG_SEQ INT64 NOT NULL,
	DTL_STAT_CD STRING(5),
	EVNT_DVC_ID INT64 NOT NULL,
	EVNT_EQUIP_SEQ INT64 NOT NULL,
	EVNT_GMT_TM TIMESTAMP,
	LAT_DEST FLOAT64,
	LAT_EVNT FLOAT64,
	LON_DEST FLOAT64,
	LON_EVNT FLOAT64,
	MAP_DRCTNS STRING(1024),
	OD_CTY STRING(25),
	OD_ST STRING(MAX),
	SMPT_TRP_LEG_NBR INT64 NOT NULL,
	SMPT_TRP_SEQ INT64 NOT NULL,
	TOT_RMN_MIN FLOAT64,
	TOT_RMN_MLS FLOAT64,
	UPDATED_BY_NM STRING(MAX) NOT NULL,
	UPDATED_GMT_DT TIMESTAMP NOT NULL,
) PRIMARY KEY (TRP_ETA_SEQ)

